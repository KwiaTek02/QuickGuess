@page "/panel-film"
@inject NavigationManager Navigation

<div class="player-panel">
    <div class="left-panel">
        <h2 class="section-title">🎬 Tryb Film</h2>
        <div class="mode-buttons">
            <button class="mode-btn film" @onclick='() => Navigation.NavigateTo("/gra-film-ranking")'>🎯 Tryb Rankingowy</button>
            <button class="mode-btn film" @onclick='() => Navigation.NavigateTo("/gra-film-trening")'>🧠 Tryb Treningowy</button>
        </div>
        <div class="stats-box">
            <h3 class="box-title">📊 Twoje statystyki</h3>
            <ul>
                <li>Liczba gier rankingowych: ...</li>
                <li>Średni wynik: ...</li>
                <li>Najlepszy wynik: ...</li>
                <li>Poprawne odpowiedzi: ...</li>
            </ul>
        </div>
    </div>
    <div class="right-panel">
        <div class="ranking-box">
            <h3 class="box-title">🏆 Ranking Filmów</h3>
            <RankingTop10 TylkoFilmy="true" />
        </div>
    </div>
</div>