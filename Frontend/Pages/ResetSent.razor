@page "/reset-sent"
@inject NavigationManager Navigation
@using Microsoft.AspNetCore.WebUtilities

@code {
    string Email = "";

    protected override void OnInitialized()
    {
        var q = QueryHelpers.ParseQuery(new Uri(Navigation.Uri).Query);
        if (q.TryGetValue("email", out var e)) Email = e.ToString();
    }
}

<div class="fullscreen-bg">
    <div class="login-card enhanced">
        <h2 class="login-title">Sprawdź skrzynkę 📬</h2>
        <p style="color:#374151;line-height:1.6">
            Jeśli adres istnieje w naszym systemie, wysłaliśmy wiadomość z linkiem do zresetowania hasła.
            @if (!string.IsNullOrEmpty(Email))
            {
                <span><br /><strong>@Email</strong></span>
            }
        </p>

        <button class="btn login-btn" @onclick='() => Navigation.NavigateTo("/login")'>
            Wróć do logowania
        </button>
    </div>
</div>

