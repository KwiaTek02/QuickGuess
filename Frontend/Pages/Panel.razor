@page "/panel"
@inject NavigationManager Navigation

<div class="player-panel">
    <div class="left-panel">
        <h2 class="section-title">🎮 Panel gracza</h2>

        <div class="mode-buttons">
            <button class="mode-btn music" @onclick='() => Navigation.NavigateTo("/panel-piosenka")'>🎵 Tryb Piosenka</button>
            <button class="mode-btn film" @onclick='() => Navigation.NavigateTo("/panel-film")'>🎬 Tryb Film</button>
        </div>

        <div class="stats-box">
            <h3 class="box-title">📊 Twoje statystyki</h3>
            <ul>
                <li>Liczba gier rankingowych: ...</li>
                <li>Średni wynik: ...</li>
                <li>Najlepszy wynik: ...</li>
                <li>Poprawne odpowiedzi: ...</li>
            </ul>
        </div>
    </div>

    <div class="right-panel">
        <div class="ranking-box">
            <h3 class="box-title">🏆 Ranking TOP 10</h3>
            <RankingTop10 />
        </div>
    </div>
</div>