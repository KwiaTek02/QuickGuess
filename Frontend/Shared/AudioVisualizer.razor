@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

@code {
    [Parameter] public bool IsPlaying { get; set; }
    [Parameter] public int Bars { get; set; } = 30;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("initVisualizer", Bars);
        }

        if (IsPlaying)
            await JSRuntime.InvokeVoidAsync("startVisualizer");
        else
            await JSRuntime.InvokeVoidAsync("stopVisualizer");
    }

    public async ValueTask DisposeAsync()
    {
        try { await JSRuntime.InvokeVoidAsync("disposeVisualizer"); } catch { }
    }
}

<div class="audio-visualizer" id="visualizer">
    @for (int i = 0; i < Bars; i++)
    {
        <div class="bar"></div>
    }
</div>